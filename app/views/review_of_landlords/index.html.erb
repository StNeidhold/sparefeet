<div class="page-header">
  <h1>
    Review of landlords
    <a href="/review_of_landlords/new" class="btn btn-lg btn-success">New Review of landlord</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Renter</th>
        <th>Landlord</th>
        <th>Rental</th>
        <th>Landlord rating</th>
        <th>Landlord notes</th>
        <th>Landlord response</th>
        <th>Actions</th>
      </tr>

      <% @review_of_landlords.each do |review_of_landlord| %>
      <tr>
        <td><%= review_of_landlord.renter.created_at %></td>
        <td><%= review_of_landlord.landlord.created_at %></td>
        <td><%= review_of_landlord.rental.renter_id %></td>
        <td><%= review_of_landlord.landlord_rating %></td>
        <td><%= review_of_landlord.landlord_notes %></td>
        <td><%= review_of_landlord.landlord_response %></td>
        <td>
          <a href="/review_of_landlords/<%= review_of_landlord.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == review_of_landlord.renter %>
            <a href="/review_of_landlords/<%= review_of_landlord.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_review_of_landlord/<%= review_of_landlord.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
