<div class="page-header">
  <h1>
    Spaces
    <a href="/spaces/new" class="btn btn-lg btn-success">New Space</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Landlord</th>
        <th>Size</th>
        <th>Notes</th>
        <th>Summary</th>
        <th>Allow boxes</th>
        <th>Allow furniture</th>
        <th>Allow sporting goods</th>
        <th>Street address</th>
        <th>City</th>
        <th>State</th>
        <th>Availability date</th>
        <th>Min term</th>
        <th>Dimensions</th>
        <th>Actions</th>
      </tr>

      <% @spaces.each do |space| %>
      <tr>
        <td><%= space.landlord.created_at %></td>
        <td><%= space.size %></td>
        <td><%= space.notes %></td>
        <td><%= space.summary %></td>
        <td><%= space.allow_boxes %></td>
        <td><%= space.allow_furniture %></td>
        <td><%= space.allow_sporting_goods %></td>
        <td><%= space.street_address %></td>
        <td><%= space.city %></td>
        <td><%= space.state %></td>
        <td><%= space.availability_date %></td>
        <td><%= space.min_term %></td>
        <td><%= space.dimensions %></td>
        <td>
          <a href="/spaces/<%= space.id %>" class="btn btn-primary">Show</a>
          <a href="/spaces/<%= space.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_space/<%= space.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @spaces, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
