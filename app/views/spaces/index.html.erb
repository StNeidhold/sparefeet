<div class="page-header">
  <h1>
    Spaces
    <a href="/spaces/new" class="btn btn-lg btn-success">New Space</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "spaces_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :dimensions_cont, "Dimensions contains" %>
    <%= f.text_field :dimensions_cont, :class => "form-control", :placeholder => "Dimensions contains" %>
  </div>

<div class="form-group">
    <%= f.label :min_term_cont, "Min term contains" %>
    <%= f.text_field :min_term_cont, :class => "form-control", :placeholder => "Min term contains" %>
  </div>

<div class="form-group">
          <%= f.label :availability_date, "Availability date" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='availability_dategteqPicker'>
                  <%= f.text_field :availability_date_gteq, :class => "form-control", :placeholder => "Availability date greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='availability_datelteqPicker'>
                  <%= f.text_field :availability_date_lteq, :class => "form-control", :placeholder => "Availability date less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#availability_dategteqPicker').datetimepicker({
                  format: 'MM/DD/YYYY'
              });
              $('#availability_datelteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'MM/DD/YYYY'
              });
              $('#availability_dategteqPicker').on("dp.change", function (e) {
                  $('#availability_datelteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#availability_datelteqPicker').on("dp.change", function (e) {
                  $('#availability_dategteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
    <%= f.label :state_cont, "State contains" %>
    <%= f.text_field :state_cont, :class => "form-control", :placeholder => "State contains" %>
  </div>

<div class="form-group">
    <%= f.label :city_cont, "City contains" %>
    <%= f.text_field :city_cont, :class => "form-control", :placeholder => "City contains" %>
  </div>

<div class="form-group">
    <%= f.label :street_address_cont, "Street address contains" %>
    <%= f.text_field :street_address_cont, :class => "form-control", :placeholder => "Street address contains" %>
  </div>

<div class="form-group">
    <%= f.label :allow_sporting_goods_eq, "Allow sporting goods" %>
    <div>
      <label class="radio-inline">
        <%= f.radio_button :allow_sporting_goods_eq, "1", checked: ((params[:q] && params[:q][:allow_sporting_goods_eq]) == "1" ? "checked" : "") %> Yes
      </label>
      <label class="radio-inline">
        <%= f.radio_button :allow_sporting_goods_eq, "0", checked: ((params[:q] && params[:q][:allow_sporting_goods_eq]) == "0" ? "checked" : "")%> No
      </label>
      <label class="radio-inline">
        <%= f.radio_button :allow_sporting_goods_eq, ""%> Either
      </label>
    </div>
  </div>

<div class="form-group">
    <%= f.label :allow_furniture_eq, "Allow furniture" %>
    <div>
      <label class="radio-inline">
        <%= f.radio_button :allow_furniture_eq, "1", checked: ((params[:q] && params[:q][:allow_furniture_eq]) == "1" ? "checked" : "") %> Yes
      </label>
      <label class="radio-inline">
        <%= f.radio_button :allow_furniture_eq, "0", checked: ((params[:q] && params[:q][:allow_furniture_eq]) == "0" ? "checked" : "")%> No
      </label>
      <label class="radio-inline">
        <%= f.radio_button :allow_furniture_eq, ""%> Either
      </label>
    </div>
  </div>

<div class="form-group">
    <%= f.label :allow_boxes_eq, "Allow boxes" %>
    <div>
      <label class="radio-inline">
        <%= f.radio_button :allow_boxes_eq, "1", checked: ((params[:q] && params[:q][:allow_boxes_eq]) == "1" ? "checked" : "") %> Yes
      </label>
      <label class="radio-inline">
        <%= f.radio_button :allow_boxes_eq, "0", checked: ((params[:q] && params[:q][:allow_boxes_eq]) == "0" ? "checked" : "")%> No
      </label>
      <label class="radio-inline">
        <%= f.radio_button :allow_boxes_eq, ""%> Either
      </label>
    </div>
  </div>

<div class="form-group">
    <%= f.label :summary_cont, "Summary contains" %>
    <%= f.text_field :summary_cont, :class => "form-control", :placeholder => "Summary contains" %>
  </div>

<div class="form-group">
    <%= f.label :notes_cont, "Notes contains" %>
    <%= f.text_field :notes_cont, :class => "form-control", :placeholder => "Notes contains" %>
  </div>

<div class="form-group">
    <%= f.label :size_cont, "Size contains" %>
    <%= f.text_field :size_cont, :class => "form-control", :placeholder => "Size contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
          <%= f.label :created_at, "Steward Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='landlordgteqcreated_atPicker'>
                  <%= f.text_field :landlord_created_at_gteq, :class => "form-control", :placeholder => "Steward Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='landlordlteqcreated_atPicker'>
                  <%= f.text_field :landlord_created_at_lteq, :class => "form-control", :placeholder => "Steward Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#landlordgteqcreated_atPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#landlordlteqcreated_atPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#landlordgteqcreated_atPicker').on("dp.change", function (e) {
                  $('#landlordlteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#landlordlteqcreated_atPicker').on("dp.change", function (e) {
                  $('#landlordgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/spaces" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#spaces_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Landlord</th>
        <th>Size</th>
        <th>Notes</th>
        <th>Summary</th>
        <th>Allow boxes</th>
        <th>Allow furniture</th>
        <th>Allow sporting goods</th>
        <th>Street address</th>
        <th>City</th>
        <th>State</th>
        <th>Availability date</th>
        <th>Min term</th>
        <th>Dimensions</th>
        <th>Actions</th>
      </tr>

      <% @spaces.each do |space| %>
      <tr>
        <td>
          <% if space.landlord.present? %>
            <a href="/stewards/<%= space.landlord.id %>">
              <%= space.landlord.created_at %>
            </a>
          <% end %>
        </td>
        <td><%= space.size %></td>
        <td><%= space.notes %></td>
        <td><%= space.summary %></td>
        <td><%= space.allow_boxes %></td>
        <td><%= space.allow_furniture %></td>
        <td><%= space.allow_sporting_goods %></td>
        <td><%= space.street_address %></td>
        <td><%= space.city %></td>
        <td><%= space.state %></td>
        <td><%= space.availability_date %></td>
        <td><%= space.min_term %></td>
        <td><%= space.dimensions %></td>
        <td>
          <a href="/spaces/<%= space.id %>" class="btn btn-primary">Show</a>
          <a href="/spaces/<%= space.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_space/<%= space.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @spaces, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
