<div class="page-header">
  <h1>
    Space photos
    <a href="/space_photos/new" class="btn btn-lg btn-success">New Space photo</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Landlord</th>
        <th>Space</th>
        <th>Photo</th>
        <th>Actions</th>
      </tr>

      <% @space_photos.each do |space_photo| %>
      <tr>
        <td>
          <% if space_photo.landlord.present? %>
            <a href="/stewards/<%= space_photo.landlord.id %>">
              <%= space_photo.landlord.created_at %>
            </a>
          <% end %>
        </td>
        <td>
          <% if space_photo.offerring.present? %>
            <a href="/spaces/<%= space_photo.offerring.id %>">
              <%= space_photo.offerring.landlord_id %>
            </a>
          <% end %>
        </td>
        <td><img src='<%= space_photo.photo %>' class='img-responsive'></td>
        <td>
          <a href="/space_photos/<%= space_photo.id %>" class="btn btn-primary">Show</a>
          <a href="/space_photos/<%= space_photo.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_space_photo/<%= space_photo.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @space_photos, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
