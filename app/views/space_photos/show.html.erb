<div class="page-header">
  <h3>Space Photo #<%= @space_photo.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Landlord</dt>
      <dd>
        <% if @space_photo.landlord.present? %>
          <a href="/stewards/<%= @space_photo.landlord_id %>">
            <%= @space_photo.landlord.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>Space</dt>
      <dd>
        <% if @space_photo.offerring.present? %>
          <a href="/spaces/<%= @space_photo.space_id %>">
            <%= @space_photo.offerring.landlord_id %>
          </a>
        <% end %>
      </dd>

      <dt>Photo</dt>
      <dd><img src="<%= @space_photo.photo %>" class="img-responsive"></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/space_photos" class="btn btn-primary">
        Back
      </a>
      <a href="/space_photos/<%= @space_photo.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_space_photo/<%= @space_photo.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
